<!DOCTYPE html>
<html>
<head>
  <title>Bux</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="wrapper">

  <header class="header">
    <div class="upbox">
      <div class="logo">
        <%= link_to root_url do %>
            <h1>Гроссбух</h1>
        <% end %>
      </div>
      <div class="menu">
        <ul class="main">
          <li class="col"><%= link_to 'Главная', root_path %></li>
          <li class="col"><%= link_to 'Услуги', services_path %></li>
          <li class="col"><%= link_to 'Прайс-лист', prices_url %></li>
          <li class="col"><%= link_to 'Контакты', contacts_path %></li>
        </ul>
      </div>
    </div>
  </header><!-- .header-->

<%= yield %>

  <footer class="footer">
    <div class="down">
      <div id="dwn" class="menu">
        <ul class="main">
          <li class="col"><a href="#">главная</a></li>
          <li class="col"><a href="#">услуги</a></li>
          <li class="col"><a href="#">прайс-лист</a></li>
          <li class="col"><a href="#">контакты</a></li>
        </ul>
      </div>
      <div class="adress">
        <p>ул. Васи - Победителя д.5</br>тел. 8 905 913 23 45</p>
      </div>
      <div class="wvar">
      </div>
    </div>
  </footer><!-- .footer -->

</div><!-- .wrapper -->


</body>
</html>
